<h1>Edit article</h1>
<!-- url: article_path(@article), method: :put это хеш, где url: и method: это ключи хеша, а article_path(@article) и :put значение хеша  -->
<%= form_for :article, url: article_path(@article), method: :put do |f| %>
	<p>
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %> <br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>