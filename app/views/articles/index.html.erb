<% @articles.each do |article| %>

<h2><%= article.title %></h2>

<p>
	<%= article.text %>
</p>
<!-- где article ниже это переменная из цикла @articles.each do |article|  -->
<p>
	<%= link_to 'Show', article_path(article) %> |
	<%= link_to 'Edit', edit_article_path(article) %>	
</p>

<hr>

<% end %>